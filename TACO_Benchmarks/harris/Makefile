include ../support/Makefile.inc
include ../support/autoscheduler.inc

#HL_TARGET=host-cuda

all: $(BIN)/test

$(BIN)/harris.generator: harris_generator.cpp ../autoscheduler/SimpleAutoSchedule.h ../autoscheduler/AutoSchedule.cpp ../autoscheduler/AutoSchedule.h ../autoscheduler/SimpleAutoSchedule.cpp ../autoscheduler/DerivativeUtils.h ../autoscheduler/DerivativeUtils.cpp $(GENERATOR_DEPS)
	@mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) -g $(filter-out %.h,$^) -o $@ $(LDFLAGS) $(HALIDE_SYSTEM_LIBS) $(USE_EXPORT_DYNAMIC)

$(BIN)/harris.a: $(BIN)/harris.generator
	@mkdir -p $(@D)
	$< -g harris -f harris -o $(BIN) target=$(HL_TARGET) auto_schedule=false

$(BIN)/harris_auto_schedule.a: $(BIN)/harris.generator  $(AUTOSCHED_BIN)/libauto_schedule.so
	@mkdir -p $(@D)
	$< -g harris -f harris_auto_schedule -o $(BIN) target=$(HL_TARGET) auto_schedule=true -p $(AUTOSCHED_BIN)/libauto_schedule.so 

$(BIN)/harris_auto_schedule_store.a: $(BIN)/harris.generator $(AUTOSCHED_BIN)/libauto_schedule.so
	@mkdir -p $(@D)
	HL_AUTO_FOLDED_FUSION=1 \
	$<  -g harris -o $(BIN) -f harris_auto_schedule_store target=$(HL_TARGET) auto_schedule=true  -p $(AUTOSCHED_BIN)/libauto_schedule.so -e static_library,h,schedule 


$(BIN)/harris_auto_schedule_no_fus.a: $(BIN)/harris.generator $(AUTOSCHED_BIN)/libauto_schedule.so
	@mkdir -p $(@D)
	HL_GPU_NO_FUS=1 \
	$<  -g harris -o $(BIN) -f harris_auto_schedule_no_fus target=$(HL_TARGET) auto_schedule=true  -p $(AUTOSCHED_BIN)/libauto_schedule.so -e static_library,h,schedule 





$(BIN)/harris_simple_auto_schedule.a: $(BIN)/harris.generator
	@mkdir -p $(@D)
	HL_USE_SIMPLE_AUTOSCHEDULER=1 \
	$< -g harris -o $(BIN) -f harris_simple_auto_schedule target=$(HL_TARGET)-no_runtime auto_schedule=false -e static_library,h

$(BIN)/filter: filter.cpp $(BIN)/harris.a $(BIN)/harris_auto_schedule.a $(BIN)/harris_auto_schedule_store.a  $(BIN)/harris_simple_auto_schedule.a $(BIN)/harris_auto_schedule_no_fus.a
	@mkdir -p $(@D)
	@$(CXX) $(CXXFLAGS) -I$(BIN) -Wall -O3 $^ -o $@ $(LDFLAGS) $(IMAGE_IO_FLAGS) $(CUDA_LDFLAGS) $(OPENCL_LDFLAGS) $(OPENGL_LDFLAGS)

clean:
	rm -rf $(BIN)

test: $(BIN)/filter
	@$(BIN)/filter ../images/rgb.png $(BIN)/out.tiff

autotune:  $(BIN)/harris.generator  $(BIN)/harris_auto_schedule.a  $(AUTOSCHED_BIN)/libauto_schedule.so 
	@$(BIN)/harris.generator -g harris -f harris_auto_schedule -o $(BIN) target=$(HL_TARGET) auto_schedule=true -p $(AUTOSCHED_BIN)/libauto_schedule.so -e static_library,h,schedule


